{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./.cache/.tsbuildinfo",
    "paths": {
      "@errors": ["./src/errors/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.json"],
  "exclude": ["**/__tests__/**/*", "**/__fixtures__/**/*"]
}
