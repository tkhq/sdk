{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./.cache/.tsbuildinfo",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.json"
  ],
  "exclude": ["**/__tests__/**/*", "**/__fixtures__/**/*"],
  "references": [{ "path": "../sdk-browser" }]
}
