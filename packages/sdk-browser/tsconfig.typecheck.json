{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "./.cache/.typecheck.tsbuildinfo",
    "paths": {
      "@polyfills/*": ["./src/__polyfills__/*"],
      "@constants": ["./src/constants"],
      "@models": ["./src/models"],
      "@storage": ["./src/storage"],
      "@types": ["./src/__types__/base"],
      "@utils": ["./src/utils"]
    },
    "plugins": [
      {
        "name": "eslint-plugin-tsdoc"
      }
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.json"]
}
